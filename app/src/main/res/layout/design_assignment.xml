<com.facebook.shimmer.ShimmerFrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shimmer_auto_start="false"
    android:id="@+id/shimmer"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/assignment_card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:gravity="center"
                >
                <TextView

                    android:id="@+id/assignment_sem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:textStyle="bold"
                    android:textColor="#2d2d2d"
                    android:textSize="12sp"
                    android:background="@drawable/shimmerbg"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/assignment_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:textStyle="bold"
                    android:textColor="#2d2d2d"
                    android:textSize="12sp"
                    android:background="@drawable/shimmerbg"
                    />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/pdfpath"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:id="@+id/pdf_text"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#FF0000"
                    android:background="@drawable/shimmerbg"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</com.facebook.shimmer.ShimmerFrameLayout>